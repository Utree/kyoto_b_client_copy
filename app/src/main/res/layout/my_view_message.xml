<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 発言者のアイコン -->
    <ImageView
        android:id="@+id/my_profile_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:background="@drawable/boy"
        android:scaleType="centerCrop"
        tools:backgroud="#foo" />
    
    <!-- 本文 -->
    <TextView
        android:id="@+id/my_content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_profile_image_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="89dp"
        android:background="@drawable/shape_room_view"
        android:elevation="6dp"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="本文" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/my_content_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="122dp"
        android:layout_marginTop="26dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp" />
</RelativeLayout>
