<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 発言者のアイコン -->
    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/boy"
        android:scaleType="centerCrop"
        tools:backgroud="#foo" />

    <!-- ユーザー名 -->
    <TextView
        android:id="@+id/user_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/profile_image_view"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/white"
        tools:text="ユーザー名" />

    <!-- 本文 -->
    <TextView
        android:id="@+id/content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_view"
        android:layout_alignStart="@id/user_name_view"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/shape_room_view"
        android:elevation="6dp"
        android:maxWidth="200dp"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="本文" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/content_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_view"
        android:layout_alignStart="@id/user_name_view"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp" />
</RelativeLayout>
